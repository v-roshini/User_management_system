generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  password    String
  role        String
  active      Boolean  @default(true)
  permissions Json?     // ← Json? NOT String[]
  createdAt   DateTime @default(now())
  avatarUrl   String?  // ← Add this
}
